<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/quick_menu_myiweb_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_quickmenu_myiweb"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:background="@drawable/btn_main_myiweb_selector"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/quickmenu_myiweb_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_menu_myiweb"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_myiweb_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quick_menu_library_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_quickmenu_library"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:background="@drawable/btn_main_library_selector"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/quickmenu_library_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_menu_library"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_myiweb_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quick_menu_phone_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_quickmenu_phone"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:background="@drawable/btn_main_phone_selector"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/quickmenu_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_menu_phone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_myiweb_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quick_menu_food_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/btn_quickmenu_food"
            android:layout_width="1dip"
            android:layout_height="1dip"
            android:background="@drawable/btn_main_food_selector"
            android:contentDescription="@string/img_desc"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/quickmenu_food_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_menu_food"
            android:textColor="@android:color/white"
            android:textSize="@dimen/main_myiweb_text_size" />
    </LinearLayout>

</LinearLayout>